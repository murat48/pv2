{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "vite",
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs18.x",
      "memory": 1024,
      "regions": ["iad1"]
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    },
    {
      "source": "/vision/:path*",
      "destination": "/api"
    },
    {
      "source": "/health",
      "destination": "/api"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/vision/(.*)",
      "dest": "/api",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/health",
      "dest": "/api",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "status": 200
    }
  ],
  "env": [
    "NETWORK",
    "SERVER_ADDRESS",
    "WALLET_PREMIUM",
    "WALLET_ENTERPRISE",
    "WALLET_STANDARD",
    "WALLET_ADVANCED",
    "FACILITATOR_URL",
    "SERVICE_NAME",
    "SERVICE_IMAGE",
    "BASE_URL",
    "GEMINI_API_KEY",
    "PORT"
  ],
  "outputDirectory": "frontend/dist",
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, PATCH, OPTIONS"
        }
      ]
    }
  ]
}
