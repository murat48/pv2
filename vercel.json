{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "vite",
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs18.x",
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    },
    {
      "source": "/vision/:path*",
      "destination": "/api"
    },
    {
      "source": "/health",
      "destination": "/api"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/vision/(.*)",
      "dest": "/api",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/health",
      "dest": "/api",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "status": 200
    }
  ],
  "env": {
    "NETWORK": "@network",
    "SERVER_ADDRESS": "@server_address",
    "WALLET_PREMIUM": "@wallet_premium",
    "WALLET_ENTERPRISE": "@wallet_enterprise",
    "WALLET_STANDARD": "@wallet_standard",
    "WALLET_ADVANCED": "@wallet_advanced",
    "FACILITATOR_URL": "@facilitator_url",
    "SERVICE_NAME": "@service_name",
    "SERVICE_IMAGE": "@service_image",
    "BASE_URL": "@base_url",
    "GEMINI_API_KEY": "@gemini_api_key",
    "PORT": "@port"
  },
  "outputDirectory": "frontend/dist",
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, PATCH, OPTIONS"
        }
      ]
    }
  ]
}
