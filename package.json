{
  "name": "stacksx402-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "node server/server.ts",
    "start": "node api/index.ts",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm install && npm run build",
    "build:backend": "cd backend && npm install && npm run build",
    "postinstall": "npm run build:frontend"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "x402-stacks": "^2.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.25",
    "@types/node": "^20.10.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
